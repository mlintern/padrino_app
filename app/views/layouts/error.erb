    <meta content="text/html; charset=utf-8" http-equiv="Content-Type" />
    <meta name=viewport content='width=device-width,initial-scale=1' />
    <title><%= @title.nil? || @title.empty? ? "Nretnil Apps" : "#{@title} | Nretnil Apps" %></title>
