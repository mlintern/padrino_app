    <div class="custom-error text-center">
      <div class="custom-error-body muted"><%= yield %></div>
      <div class="custom-error-footer">
        <a href="#" onclick="history.go(-1);return false;" class="custom-error-go-back btn btn-default pull-left" title="Go back"><i class="fa fa-arrow-left"></i></a>
      </div>
    </div>
  </body>
