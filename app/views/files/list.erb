<div class="row files-list-container">
	<% files.each do |file| %>
		<div class=" col-sm-6 col-md-4 col-lg-3 col-xl-2 mb-3">
			<div class="card p-2 text-center">
				<% if ['.gif', '.jpg', '.png', '.jpeg'].include? File.extname(file[:name].downcase) %>
				<img class="card-img-top" src="/files/<%= file[:id].to_s %>" alt="<%= file[:name].to_s %>">
				<% else %>
				<div class="card-img-top text-center fa-2x file-placeholder"><i class="fa fa-file fa-5x"></i></div>
				<% end %>
				<div class="card-body text-monospace text-center">
					<div><a href="/files/<%= file[:id].to_s %>" target="_blank"><%= file[:name].to_s %><a></div>
					<div><a class="btn btn-sm btn-secondary" href="/files/<%= file[:id].to_s %>/download"><i class="fa fa-download"></i> Download</a></div>
					<div><%= file[:size].to_s %></div>
				</div>
			</div>
		</div>
	<% end %>
</div>
