<div class="editor-container">

	<div class="editor-header clearfix">
		<div class="pull-left">Nrentil Editor</div>
		<div class="pull-right">
			<div class="btn-group">
				<button class="btn btn-editor btn-default btn-style btn-bold"><i class="fa fa-bold"></i></button>
				<button class="btn btn-editor btn-default btn-style btn-italic"><i class="fa fa-italic"></i></button>
				<button class="btn btn-editor btn-default btn-style btn-decoration btn-strikethrough"><i class="fa fa-strikethrough"></i></button>
				<button class="btn btn-editor btn-default btn-style btn-decoration btn-underline"><i class="fa fa-underline"></i></button>
			</div>
			<div class="btn-group">
				<button class="btn btn-editor btn-default btn-color"><i class="fa fa-paint-brush"></i></button>
			</div>
			<div class="btn-group">
			<button class="btn btn-editor btn-default btn-size btn-small"><i class="fa fa-small fa-font"></i></button>
			<button class="btn btn-editor btn-default btn-size btn-normal active"><i class="fa fa-normal fa-font"></i></button>
			<button class="btn btn-editor btn-default btn-size btn-large"><i class="fa fa-large fa-font"></i></button>
			</div>
			<div class="btn-group">
				<button class="btn btn-editor btn-default btn-align btn-align-left active"><i class="fa fa-align-left"></i></button>
				<button class="btn btn-editor btn-default btn-align btn-align-center"><i class="fa fa-align-center"></i></button>
				<button class="btn btn-editor btn-default btn-align btn-align-right"><i class="fa fa-align-right"></i></button>
			</div>
			<div class="btn-group">
				<button class="btn btn-editor btn-default btn-preview"><i class="fa fa-picture-o"></i> Preview</button>
			</div>
			<div class="btn-group">
				<button class="btn btn-editor btn-default btn-reset"><i class="fa fa-undo"></i> Reset</button>
			</div>
			<div class="btn-group">
				<button class="updated-alert btn btn-warning nretnil-editor btn-sync-editor">Unsynced Changes</button>
				<button class="btn btn-success btn-sync-editor">Sync</button>
			</div>
		</div>
	</div>

	<div class="editor-wrapper"><div class="editor" contentEditable=true><% if !post.nil? %><%= post['body'] %><% end %></div></div>

</div>

<div class="modal fade" id="previewModal" tabindex="-1">
	<div class="modal-dialog modal-xl" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><i class="fa fa-times"></i></button>
				<h4 class="modal-title">Content Preview</h4>
			</div>
			<div class="modal-body preview-modal-content">
			...
			</div>
		</div>
	</div>
</div>
