<div class="page-header">
  <h1>Account Creator <small>Create new account</small></h1>
</div>

<ul class="nav nav-tabs">
  <li><a href="/accounts"><i class="fa fa-users"></i></a></li>
  <li class="active pull-right"><a href="/accounts/new"><i class="fa fa-user-plus"></i></a></li>
  <li><a href="/accounts/edit/<%= current_user.id %>"><i class="fa fa-user"></i></a></li>
</ul>
<div class="tabs-content">
	<div class="row">
		<div class="col-sm-8 col-sm-offset-2">
			<% form_for :account, url(:accounts, :create), :class => 'form-horizontal' do |f| %>
				<%= erb :"accounts/form", :layout => false,  :locals => { :f => f, 'user' => account } %>
		  <% end %>
		</div>
  </div>
</div>
