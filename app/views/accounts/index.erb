<div class="page-header">
  <h1>Accounts <small>View all user accounts</small></h1>
</div>

<%= erb :"accounts/tabs", :layout => false, :locals => { 'user' => account || nil, 'page' => "list" } %>
<div class="tabs-content">
  <div class="table-responsive">
    <table id="list" class="table table-striped table-hover table-condensed">
      <thead>
        <tr>
          <th class="header list-menu">
            <div class=dropdown>
              <a href="#" class="list-menu-toggle dropdown-toggle" data-toggle="dropdown">
                <i class="fa fa-magic"></i>  <span class="caret"></span>
              </a>
              <ul class="list-menu dropdown-menu" role=menu>
                <li class=ist-menu-wrapper>
                  <a id="select-all" class="list-menu-link" href="#"><i class="fa fa-check-square-o"></i> Select all</a>
                </li>
                <li class=list-menu-wrapper.list-menu-wrapper-disabled>
                  <a id="deselect-all" class="list-menu-link list-menu-link-disabled" href="#"><i class="fa fa-square-o"></i> Deselect all</a>
                </li>
                <li class="list-menu-divider divider"></li>
                <li class=list-menu-wrapper.list-menu-wrapper-disabled>
                  <a id="delete-selected" class="list-menu-link list-menu-link-disabled" href="#"><i class="fa fa-trash-o"></i> Delete selected</a>
                  <div class='list-menu-popover-delete-selected popover right'>
                    <div class="arrow"></div>
                    <h3 class="popover-title">Are you sure you want to delete all the selected items?</h3>
                    <div class="popover-content">
                      <% form_tag url(:accounts, :destroy_many), :method => :delete do %>
                        <%=hidden_field_tag :account_ids, :'data-delete-many-ids' => true %>
                        <input type="submit" value="Delete" class="list-menu-popover-delete-selected-btn btn btn-danger btn-small">
                        <div class='btn btn-default btn-small cancel'>Cancel</div>
                      <% end %>
                    </div>
                  </div>
                </li>
              </ul>
            </div>
          </th>
          <th class=header><a href="?by=id&dir=<%if params[:dir] == 'desc' %>asc<%else%>desc<%end%>">Id <% if params[:by] == 'id' %><%if params[:dir] == 'desc' %><i class="fa fa-chevron-up"></i><%else%><i class="fa fa-chevron-down"></i><%end%><% end %></a></th>
          <th class=header><a href="?by=username&dir=<%if params[:dir] == 'desc' %>asc<%else%>desc<%end%>">Username <% if params[:by] == 'username' || params[:by].nil? %><%if params[:dir] == 'desc' %><i class="fa fa-chevron-up"></i><%else%><i class="fa fa-chevron-down"></i><%end%><% end %></a></th>
          <th class=header><a href="?by=name&dir=<%if params[:dir] == 'desc' %>asc<%else%>desc<%end%>">Name <% if params[:by] == 'name' %><%if params[:dir] == 'desc' %><i class="fa fa-chevron-up"></i><%else%><i class="fa fa-chevron-down"></i><%end%><% end %></a></th>
          <th class=header><a href="?by=surname&dir=<%if params[:dir] == 'desc' %>asc<%else%>desc<%end%>">Surname <% if params[:by] == 'surname' %><%if params[:dir] == 'desc' %><i class="fa fa-chevron-up"></i><%else%><i class="fa fa-chevron-down"></i><%end%><% end %></a></th>
          <th class=header><a href="?by=email&dir=<%if params[:dir] == 'desc' %>asc<%else%>desc<%end%>">Email Address <% if params[:by] == 'email' %><%if params[:dir] == 'desc' %><i class="fa fa-chevron-up"></i><%else%><i class="fa fa-chevron-down"></i><%end%><% end %></a></th>
          <th class=header>Roles</th>
          <th class=header><a href="?by=status&dir=<%if params[:dir] == 'desc' %>asc<%else%>desc<%end%>">Status <% if params[:by] == 'status' %><%if params[:dir] == 'desc' %><i class="fa fa-chevron-up"></i><%else%><i class="fa fa-chevron-down"></i><%end%><% end %></a></th>
          <th class="header list-row-action-header"></th>
        </tr>
      </thead>

      <tbody>
        <% @accounts.each do |account| %>
          <tr class="list-row<% if account.status == 0 %> danger<% end %>">
            <td class="list-column list-selectable">
              <%= check_box_tag 'account_ids[]', :value => account.id, :class => 'list-selectable-checkbox' %>
            </td>
            <td class=list-column> <%= account.id %> </td>
            <td class=list-column> <%= account.username %> </td>
            <td class=list-column> <%= account.name %> </td>
            <td class=list-column> <%= account.surname %> </td>
            <td class=list-column> <%= account.email %> </td>
            <td class=list-column> 
            <% account.role.gsub('"',"").gsub('[',"").gsub(']',"").split(',').each do |role| %> 
                <span class="label label-primary"><%= role %></span>
            <% end %>
            </td>
            <td class=list-column> <%= account_status[account.status] %> </td>
            <td class="list-column list-row-action">
              <div class='list-row-action-wrapper'>
                <a href="/accounts/edit/<%= account.id %>" rel="tooltip" title="Edit account" class="list-row-action-wrapper-link"><i class="fa fa-edit"></i> </a>
                <a rel="tooltip" title="Delete account" class="list-row-action-delete-one list-row-action-wrapper-link" href="#"><i class="fa fa-trash-o"></i> </a>
                <div class="popover list-row-action-popover-delete-one left">
                  <div class="arrow"> </div>
                  <h3 class="popover-title">Delete <%= account.username %></h3>
                  <div class="popover-content">
                    <%- form_tag url(:accounts, :destroy, :id => account.id), :method => :delete do %>
                      <input type="submit" value="Delete" class="list-row-action-popover-delete-one-btn btn btn-danger btn-small">
                      <div class="btn btn-default btn-small cancel">Cancel</div>
                    <% end %>
                  </div>
                </div>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
